<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="0dp"
        android:background="#EDE6DB"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="410dp"
            android:layout_height="306dp"
            android:id="@+id/img1"
            app:srcCompat="@drawable/img1" />

        <TextView
            android:id="@+id/bioname"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginStart="13dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="0dp"
            android:text="DIVISION DE CULTURA, MINEDUCYT"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="149dp"
                android:layout_height="83dp"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/biotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:gravity="start|top|fill|center"
                android:inputType="text|textMultiLine"
                android:maxEms="15"
                android:maxLines="15"
                android:text="Bienvenido a la aplicacion de cultura del ministerio de Educacion, desde aqui podra contar con la iformacion mas actualizada del que hacer del MEDUCYT" />

        </RelativeLayout>

        <TextView
            android:layout_width="410dp"
            android:layout_height="185dp"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:textAlignment="center"
            android:text="Josue Emanuel Hernandez Ortega"/>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>